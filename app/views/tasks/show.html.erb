<h1><%= @task.title %></h1>

<p><%= @task.details %></p>
<p>Completed: <%= @task.completed ? 'Yes' : 'No' %></p>

<%= link_to 'Edit', edit_task_path(@task) %> |
<%= link_to 'Delete', delete_task_path(@task), method: :delete, data: { confirm: 'Are you sure?' } %> |
<%= link_to 'Back to Tasks', tasks_path %>
